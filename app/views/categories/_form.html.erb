<%= render "shared/errors", obj: @category %>  <!-- passing @category as the object to render error messages for -->

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
   <div class="control-label col-sm-2">
      <%= f.label :name %>
   </div>
   <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter categor name", autofocus: true %>
   </div>
</div>
<div class="form-group">
   <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit class: "btn btn-success btn-large" %>
   </div>
</div>
   <% end %>
<div class="col-xs-4 col-xs-offset-4">
   [ <%= link_to "Cancel Request and return to articles listing", articles_path %> ]
</div>